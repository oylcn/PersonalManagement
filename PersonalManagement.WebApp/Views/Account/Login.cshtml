<body class=" login">

    <!-- BEGIN LOGO -->
    <div class="logo">

        @*<img src="@Url.Content("~/Content/assets/pages/img/cosmoslogo.png")" alt=""/>*@
        <img src="@Url.Content("~/Content/Images/login_v2.png")" alt="" />

    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content" style="padding: 40px 40px 50px; width: 400px;">
        <!-- BEGIN LOGIN FORM -->
        @*<form class="login-form" action="/Account/Login" method="post">*@
        @using (Html.BeginForm("Login", "Account"}, FormMethod.Post, new { @class = "login-form" }))
        {
            <div class="login-form">
                <h3 class="form-title">Emlak Yönetim Paneli Giriş</h3>
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button>
                    <span>Kullanıcı adı ve şifrenizi giriniz.</span>
                </div>
                @if (Request.QueryString["m"] != null)
                {
                    <div class="alert alert-danger">
                        <button class="close" data-close="alert"></button>
                        <span> @Request.QueryString["m"] </span>
                    </div>
                }
                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Kullanıcı Adı</label>
                    <div class="input-icon">
                        <i class="fa fa-user"></i>


                        @Html.TextBoxFor(f => f.UserName, new { title = "Kullanıcı adınızı giriniz.", @class = "form-control placeholder-no-fix", @placeholder = "Kullanıcı Adı", @value = "", @autofocus = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">şifre</label>
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>

                        @Html.TextBoxFor(f => f.Password, new { @title = "şifrenizi giriniz.", @type = "password", @class = "form-control placeholder-no-fix", @placeholder = "Şifre", @value = "" })
                    </div>
                </div>
                <div class="form-actions">
                    <label class="rememberme mt-checkbox mt-checkbox-outline">
                        @*<input type="checkbox" name="remember" value="1" />*@
                        @Html.CheckBox("RememberMe")


                        Beni Hatırla
                        <span></span>
                    </label>
                    <button id="login" type="submit" class="btn green pull-right">Giriş</button><br />

                </div>
                @*<div class="forget-password">
                        <h4>Şifrenizi mi unuttunuz ?</h4>
                        <p>
                            üzülmeyin,
                            <a href="javascript:;" id="forget-password"> şifrenizi yenilemek için tıklayın </a>
                        </p>
                    </div>
                    <div class="create-account">
                        <p>
                            Henüz bir kullanıcı oluşturmadınız&nbsp;mı&nbsp;?&nbsp;<br/>
                            <a href="javascript:;" id="register-btn"> Kullanıcı Oluştur </a>

                        </p>


                    </div>*@
            </div>
        }
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="forget-form" action="index.html" method="post">
            <h3>Şifremi Unuttum ?</h3>
            <p> şifrenizin resetlenmesi için email adresinizi giriniz. </p>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn red btn-outline">Geri </button>
                <button type="submit" class="btn green pull-right"> Tamam </button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->

    </div>
    <!-- END LOGIN -->
